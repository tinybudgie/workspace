{
  "name": "nx",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "start": "nx serve",
    "build": "nx build",
    "test": "nx test",
    "prepare": "husky install",
    "lint": "npm run tsc:lint && nx workspace-lint && npm run nx -- run-many --target=lint --all",
    "lint:fix": "npm run tsc:lint && nx workspace-lint --fix && nx run-many --target=lint --all --fix && nx format:write --all",
    "tsc:lint": "tsc --noEmit -p tsconfig.base.json",
    "docker:dev:down": "set -a && . ./.env && set +a && ./docker/dev/docker-compose-down.sh",
    "docker:dev:up": "set -a && . ./.env && set +a && ./docker/dev/docker-compose-up.sh",
    "docker:dev:clean-down": "set -a && . ./.env && set +a && ./docker/dev/docker-compose-clean-down.sh",
    "docker:dev:restart": "npm run docker:dev:down && npm run docker:dev:up",
    "docker:dev:clean-restart": "npm run docker:dev:clean-down && npm run docker:dev:up",
    "prisma": "prisma",
    "prisma:pull": "npm run -- prisma db pull && npm run prisma:generate",
    "prisma:pull:local": "export $(xargs < ./.env) > /dev/null 2>&1 && export DATABASE_URL=$DATABASE_URL && npm run -- prisma db pull && npm run prisma:generate",
    "prisma:generate": "npm run -- prisma generate"
  },
  "private": true,
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/terminus": "^9.1.2",
    "@nestjs/testing": "^9.2.0",
    "@prisma/client": "^4.5.0",
    "env-var": "^7.3.0",
    "nestjs-custom-injector": "^2.2.3",
    "pg": "^8.8.0",
    "pg-promise": "^10.12.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.0.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^9.0.0",
    "@nrwl/cli": "15.0.3",
    "@nrwl/eslint-plugin-nx": "15.0.3",
    "@nrwl/jest": "15.0.3",
    "@nrwl/linter": "15.0.3",
    "@nrwl/nest": "15.0.3",
    "@nrwl/node": "15.0.3",
    "@nrwl/nx-cloud": "latest",
    "@nrwl/workspace": "15.0.3",
    "@nx-go/nx-go": "^2.7.0",
    "@types/jest": "28.1.1",
    "@types/node": "18.7.1",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "eslint": "~8.15.0",
    "husky": "^8.0.1",
    "jest": "28.1.1",
    "jest-environment-jsdom": "28.1.1",
    "lint-staged": "^13.0.3",
    "nx": "15.0.3",
    "prettier": "^2.6.2",
    "prisma": "^4.5.0",
    "ts-jest": "28.0.5",
    "ts-node": "10.9.1",
    "typescript": "~4.8.2"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{js,ts,css,scss,md}": "prettier --ignore-unknown --write"
  }
}
